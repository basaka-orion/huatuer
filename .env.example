# ===========================================
# Redis配置
# ===========================================
# Redis连接URL
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Flask应用配置
# ===========================================
# Flask环境 (development/production)
FLASK_ENV=development

# Flask密钥 (生产环境请使用随机生成的密钥)
FLASK_SECRET_KEY=your-secret-key-here

# Flask调试模式 (生产环境设为false)
FLASK_DEBUG=true

# ===========================================
# 文件上传配置
# ===========================================
# 上传文件最大大小 (字节)
MAX_UPLOAD_SIZE=52428800

# 上传文件保存路径
UPLOAD_FOLDER=uploads

# 允许的文件扩展名
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# ===========================================
# AI服务配置
# ===========================================
# AI服务超时时间 (秒)
AI_SERVICE_TIMEOUT=300

# 最大并发AI任务数
MAX_CONCURRENT_AI_TASKS=5

# 任务结果缓存时间 (秒)
TASK_RESULT_CACHE_TIME=3600

# ===========================================
# WebSocket配置
# ===========================================
# WebSocket服务端口
WEBSOCKET_PORT=8080

# WebSocket服务主机
WEBSOCKET_HOST=0.0.0.0

# 最大连接数
MAX_WEBSOCKET_CONNECTIONS=1000

# 心跳间隔 (秒)
WEBSOCKET_PING_INTERVAL=20

# 心跳超时 (秒)
WEBSOCKET_PING_TIMEOUT=10

# ===========================================
# 协作功能配置
# ===========================================
# 房间最大参与者数量
MAX_ROOM_PARTICIPANTS=8

# 房间过期时间 (秒)
ROOM_EXPIRY_TIME=86400

# 消息历史保留数量
MESSAGE_HISTORY_LIMIT=1000

# ===========================================
# 监控和日志配置
# ===========================================
# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/app.log

# 启用性能监控
ENABLE_METRICS=true

# Prometheus指标端口
METRICS_PORT=9091

# ===========================================
# 安全配置
# ===========================================
# CORS允许的源
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API限流配置 (每分钟请求数)
API_RATE_LIMIT=60

# 上传限流配置 (每分钟上传数)
UPLOAD_RATE_LIMIT=10

# JWT密钥 (如果使用JWT认证)
JWT_SECRET_KEY=your-jwt-secret-here

# JWT过期时间 (秒)
JWT_EXPIRY_TIME=86400

# ===========================================
# 数据库配置 (如果使用本地数据库)
# ===========================================
# 数据库URL
# DATABASE_URL=postgresql://username:password@localhost:5432/huatuer

# 数据库连接池大小
# DB_POOL_SIZE=10

# 数据库连接超时 (秒)
# DB_TIMEOUT=30

# ===========================================
# 缓存配置
# ===========================================
# 缓存类型 (redis/memory)
CACHE_TYPE=redis

# 缓存默认过期时间 (秒)
CACHE_DEFAULT_TIMEOUT=300

# ===========================================
# 邮件配置 (如果需要邮件通知)
# ===========================================
# SMTP服务器
# MAIL_SERVER=smtp.gmail.com

# SMTP端口
# MAIL_PORT=587

# SMTP用户名
# MAIL_USERNAME=your-email@gmail.com

# SMTP密码
# MAIL_PASSWORD=your-app-password

# 是否使用TLS
# MAIL_USE_TLS=true

# 发件人邮箱
# MAIL_DEFAULT_SENDER=your-email@gmail.com

# ===========================================
# 第三方服务配置
# ===========================================
# 阿里云OSS配置 (如果使用OSS存储)
# ALIYUN_OSS_ACCESS_KEY_ID=your-access-key-id
# ALIYUN_OSS_ACCESS_KEY_SECRET=your-access-key-secret
# ALIYUN_OSS_BUCKET=your-bucket-name
# ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# 腾讯云COS配置 (如果使用COS存储)
# TENCENT_COS_SECRET_ID=your-secret-id
# TENCENT_COS_SECRET_KEY=your-secret-key
# TENCENT_COS_BUCKET=your-bucket-name
# TENCENT_COS_REGION=ap-beijing

# ===========================================
# 开发环境配置
# ===========================================
# 是否启用调试工具
ENABLE_DEBUG_TOOLBAR=false

# 是否启用SQL查询日志
ENABLE_SQL_LOGGING=false

# 是否启用性能分析
ENABLE_PROFILING=false

# 测试数据库URL
# TEST_DATABASE_URL=postgresql://username:password@localhost:5432/huatuer_test
